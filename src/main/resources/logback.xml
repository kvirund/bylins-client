<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Отключаем внутренние статусные сообщения logback -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <property name="LOG_DIR" value="${user.home}/.bylins-client/logs"/>
    <property name="LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%level] [%logger{20}] %msg%n"/>
    <!-- Кодировка для вывода в консоль. Можно переопределить через -DCONSOLE_CHARSET=windows-1251 -->
    <property name="CONSOLE_CHARSET" value="${CONSOLE_CHARSET:-UTF-8}"/>

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight([%level]) [%logger{20}] %msg%n</pattern>
            <charset>${CONSOLE_CHARSET}</charset>
        </encoder>
    </appender>

    <!-- UI appender - для отображения логов в интерфейсе -->
    <appender name="UI" class="com.bylins.client.logging.UiLogAppender"/>

    <!-- File appender - один файл на день -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/system.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/system_%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Уровни для разных пакетов -->
    <logger name="com.bylins.client" level="DEBUG"/>
    <logger name="com.bylins.client.scripting" level="DEBUG"/>
    <logger name="org.python" level="WARN"/>
    <logger name="org.luaj" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="UI"/>
    </root>
</configuration>
